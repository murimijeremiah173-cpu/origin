class CoffeeOrder {
    String size;
    double price;

    // Constructor
    public CoffeeOrder(String size, double price) {
        this.size = size;
        this.price = price;
    }
}

public class Main {
    public static void main(String[] args) {

        // Creating two CoffeeOrder objects
        CoffeeOrder order1 = new CoffeeOrder("Medium", 3.50);
        CoffeeOrder order2 = new CoffeeOrder("Large", 4.75);

        // Displaying the order details
        System.out.println("Order 1: Size = " + order1.size + ", Price = $" + order1.price);
        System.out.println("Order 2: Size = " + order2.size + ", Price = $" + order2.price);
    }
}
